<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"

            android:background="@color/button_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend"
            android:checked="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="200dp">
        </Switch>


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/rank_dropdown_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:fabSize="normal"
            app:maxImageSize="30dp"
            app:menu_backgroundColor="@android:color/transparent"
            app:menu_buttonSpacing="8dp"
            app:menu_colorNormal="@android:color/transparent"
            app:menu_colorPressed="@android:color/transparent"
            app:menu_colorRipple="@android:color/transparent"
            app:menu_icon="@drawable/ic_menu"
            app:menu_openDirection="down"
            app:menu_shadowColor="@android:color/transparent"
            app:menu_showShadow="false">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/world_ranking_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/world"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="false"
            app:fab_size="mini"/>

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/Friend_ranking_dropdown_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/friend"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_showShadow="false"
                app:fab_size="mini"/>

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/total_Qr_dropdown_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/qr_code"
                app:fab_colorNormal="@android:color/transparent"
                app:fab_showShadow="false"
                app:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageView1"
                android:layout_width="86dp"
                android:layout_height="92dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_people" />

            <TextView
                android:id="@+id/second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="39dp"
                android:text="Name">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="86dp"
                android:layout_height="92dp"
                android:background="@drawable/ic_people"
                android:layout_marginLeft="60dp" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Name"
                android:layout_marginLeft="85dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="86dp"
                android:layout_height="92dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_people"
                />
            <TextView
                android:id="@+id/third_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Name"
                android:layout_marginLeft="85dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@drawable/group_4_4">

    </ImageView>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>