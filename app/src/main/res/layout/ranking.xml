<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"

            android:background="@color/button_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow" />
        <Button
            android:id="@+id/Total_score_button"
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rectangle_13"
            android:layout_marginTop="17dp"
            android:text="Total Score"
            android:textColor="@color/black"
            android:textSize="10sp">

        </Button>

        <Button
            android:id="@+id/Best_button"
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rectangle_13"
            android:text="Best QR Code"
            android:textColor="@color/black"
            android:textSize="10sp">

        </Button>

        <Button
            android:id="@+id/Total_QR_button"
            android:layout_width="73dp"
            android:layout_height="27dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rectangle_13"
            android:textColor="@color/black"
            android:text="Total QR"
            android:textSize="10sp">


        </Button>
    </LinearLayout>

    <ListView
        android:id="@+id/Total_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider = "#000"
        android:footerDividersEnabled = "false"
        android:headerDividersEnabled = "false">

    </ListView>






</LinearLayout>